<odoo>
    <record id="work_action" model="ir.actions.act_window">
        <field name="name">Works</field>
        <field name="res_model">work_model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="work_tree_view" model="ir.ui.view">
        <field name="name">work_model.tree</field>
        <field name="model">work_model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="topic_id"/>
                <field name="review"/>
                <field name="admitted_to_protection"/>
                <field name="non_admission_reason"/>
                <field name="grade"/>
            </tree>
        </field>
    </record>

    <record id="work_from_view" model="ir.ui.view">
        <field name="name">work_model.form</field>
        <field name="model">work_model</field>
        <field name="arch" type="xml">
            <form string="Work">
                <sheet>
                    <group>
                        <group>
                            <field name="topic_id" required="1"/>
                            <field name="review"/>
                            <field name="admitted_to_protection"/>
                            <field name="non_admission_reason" invisible="admitted_to_protection == False"/>
                            <field name="grade"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="work_search_view" model="ir.ui.view">
        <field name="name">work_model.search</field>
        <field name="model">work_model</field>
        <field name="arch" type="xml">
            <search>
                <field name="topic_id"/>
                <field name="review"/>
                <field name="admitted_to_protection"/>
                <field name="non_admission_reason"/>
                <field name="grade"/>
            </search>
        </field>
    </record>
</odoo>