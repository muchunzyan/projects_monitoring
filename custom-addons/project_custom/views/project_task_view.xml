<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Наследуем форму задачи и добавляем новое поле -->
        <record id="view_project_task_form_inherit_custom" model="ir.ui.view">
            <field name="name">project.task.form.inherit.custom</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <!-- Добавляем новое поле attachments в нужное место -->
                <xpath expr="//sheet/group/group[1]" position="inside">
                    <field name="attachments"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>